PACKAGE = @PACKAGE@
VERSION = @VERSION@

SHELL = /bin/sh
top_srcdir = @top_srcdir@
srcdir = @srcdir@

.SUFFIXES:
.SUFFIXES: .c .o

CC = @CC@
DEFINES = @DEFS@ -DRANDOM=\"./random\"
CFLAGS = -I. @CFLAGS@ $(DEFINES)
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
INSTALL = @INSTALL@
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
mandir = @mandir@

DISTFILES =

TARGET1=server
SOURCES1=server.c
OBJS1=server.o

TARGET2=client
SOURCES2=client.c passfd.c
OBJS2=client.o passfd.o

TARGETS=$(TARGET1) $(TARGET2)
OBJS=$(OBJS1) $(OBJS2)
SOURCES=$(SOURCES1) $(SOURCES2)

all: $(TARGETS)

install: all
	$(top_srcdir)/mkinstalldirs $(bindir)
	$(INSTALL) $(TARGETS) $(bindir)/
##	$(top_srcdir)/mkinstalldirs $(mandir)/man1
##	$(INSTALL) $(MAN) $(mandir)/man1/$(MAN)

$(TARGET1): $(OBJS1)
	$(CC) $(CFLAGS) -o $(TARGET1) $(OBJS1) $(LDFLAGS) $(LIBS)

$(TARGET2): $(OBJS2)
	$(CC) $(CFLAGS) -o $(TARGET2) $(OBJS2) $(LDFLAGS) $(LIBS)

$(OBJS): $(SOURCES) 

clean:
	/bin/rm -f $(TARGETS) *.o core

distclean: clean config-clean

config-clean: confclean-recursive

confclean-recursive: cfg-clean

cfg-clean:
	/bin/rm -f Makefile config.h config.status config.cache config.log

mostlyclean: clean

maintainer-clean: clean

# automatic re-running of configure if the configure.in file has changed
${srcdir}/configure: configure.in 
	cd ${srcdir} && autoconf

# autoheader might not change config.h.in, so touch a stamp file
${srcdir}/config.h.in: stamp-h.in
${srcdir}/stamp-h.in: configure.in 
		cd ${srcdir} && autoheader
		echo timestamp > ${srcdir}/stamp-h.in

config.h: stamp-h
stamp-h: config.h.in config.status
	./config.status
Makefile: Makefile.in config.status
	./config.status
config.status: configure
	./config.status --recheck



